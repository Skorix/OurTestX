<Window x:Name="window" x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="741">
    <Grid Background="#FF707070">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="1" VerticalScrollBarVisibility="Auto">
            <StackPanel  x:Name="stackPanel" Background="#FFFD6565"  FlowDirection="LeftToRight"  >
                <Viewbox MinWidth="{Binding Width, ElementName=stackPanel}" MinHeight="{Binding Width, ElementName=stackPanel}">
                    <TextBlock x:Name="tt" TextWrapping="Wrap" Margin="8" MaxWidth="300" ScrollViewer.VerticalScrollBarVisibility="Hidden" >dgjdgjdgjdgjdgj</TextBlock>
                </Viewbox>
            </StackPanel>
        </ScrollViewer>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="413,10,0,0" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</Window>
